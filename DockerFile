# ----------------------------
# Builder Stage
# ----------------------------
FROM node:22-slim AS builder
WORKDIR /app

# Update npm to latest version to fix vulnerabilities:
# - CVE-2025-64756 (glob)
# - CVE-2024-21538 (cross-spawn)
# - CVE-2025-5889 (brace-expansion)
RUN npm install -g npm@11 && npm cache clean --force

# Install build dependencies
# (Slim uses Debian â€“ must install libc dependencies for Next.js)
RUN apt-get update && apt-get install -y \
    python3 \
    build-essential \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY package.json package-lock.json* yarn.lock* ./

RUN npm ci --legacy-peer-deps

COPY . .

# Build args passed from GitHub Actions
ARG NEXT_PUBLIC_USER_API_BASE
ARG NEXT_PUBLIC_SERVICE_API_BASE
ARG NEXT_PUBLIC_SERVICES_API_BASE
ARG NEXT_PUBLIC_STAFF_API_BASE
ARG NEXT_PUBLIC_APPOINTMENT_API_BASE
ARG NEXT_PUBLIC_NOTIFICATION_API_BASE
ARG NEXT_PUBLIC_ANALYTICS_API_BASE

# Inject envs into Next build
ENV NEXT_PUBLIC_USER_API_BASE=${NEXT_PUBLIC_USER_API_BASE}
ENV NEXT_PUBLIC_SERVICE_API_BASE=${NEXT_PUBLIC_SERVICE_API_BASE}
ENV NEXT_PUBLIC_SERVICES_API_BASE=${NEXT_PUBLIC_SERVICES_API_BASE}
ENV NEXT_PUBLIC_STAFF_API_BASE=${NEXT_PUBLIC_STAFF_API_BASE}
ENV NEXT_PUBLIC_APPOINTMENT_API_BASE=${NEXT_PUBLIC_APPOINTMENT_API_BASE}
ENV NEXT_PUBLIC_NOTIFICATION_API_BASE=${NEXT_PUBLIC_NOTIFICATION_API_BASE}
ENV NEXT_PUBLIC_ANALYTICS_API_BASE=${NEXT_PUBLIC_ANALYTICS_API_BASE}

RUN npm run build

# ----------------------------
# Runner Stage (Production)
# ----------------------------
FROM node:22-slim AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Security: Remove npm entirely from production image
# Next.js standalone mode doesn't need npm/npx at runtime
# This eliminates ALL npm-related CVEs:
# - CVE-2025-64756 (glob)
# - CVE-2024-21538 (cross-spawn)  
# - CVE-2025-5889 (brace-expansion)
RUN apt-get update && apt-get upgrade -y && \
    rm -rf /usr/local/lib/node_modules/npm /usr/local/bin/npm /usr/local/bin/npx && \
    rm -rf /var/lib/apt/lists/* /root/.npm /tmp/*

# Copy only the standalone output (no node_modules needed)
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static
COPY --from=builder /app/public ./public

EXPOSE 3000

# Start Next.js standalone server
CMD ["node", "server.js"]
